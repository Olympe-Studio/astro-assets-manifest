{
  "name": "astro-assets-manifest",
  "description": "Allows your Astro project to automatically generate a manifest of your assets.",
  "version": "1.0.0",
  "module": "index.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Olympe-Studio/astro-assets-manifest"
  },
  "exports": {
    ".": "./dist/assetsManager.js",
    "./package.json": "./package.json"
  },
  "types": "./dist/assetsManager.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "astro",
    "astro-integration",
    "withastro"
  ],
  "scripts": {
    "build": "bun build ./src/assetsManager.ts --outdir ./dist --target node --minify"
  },
  "peerDependencies": {
    "astro": "^4.16.7"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "astro": "^4.16.7",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  }
}